<script src="/public/js/FSM/login.js" type="text/javascript"></script>
<% $page = "login" %>
<div data-role="page">
  <% if platform == 'APPLE' %>
	<div data-role="content" class="content1">
  <% else %>
	<div data-role="content">
  <% end %>

    <div id="loginCntr">
    
      <div class="triangle">
          <div class="yellow"></div>
          <img src='/public/images/FSM/logo.png' class="img" />
      </div>

      <div class="loginBox">
          <form name="formLogin" id="formLogin" method="POST" action="<%= url_for :action => :do_login %>">
            
            <div data-role="fieldcontain">
              <label for="login" class="loginLbl abc">Username</label>
              <input type="text" id="login" name="login" maxlength="10" class="itemValue" value="" <%= placeholder("Login") %> " onkeyup="setValuesOnChange()" />
            </div>
            <div data-role="fieldcontain">
              <label for="password" class="loginLbl">Password</label>
              <input type="password" id="password" name="password" class="itemValue" <%= placeholder("Password") %> " onkeyup="setValuesOnChange()" />
            </div>
            
            <div id="remember1">
              <span class="loginLbl">Remember Me</span>
              <select name="remember" id="remember" data-role="slider" data-mini="true" data-theme="d" class="floatLeft" onchange="value_change(this);">
                <option value="false">No</option>
                <option value="true">Yes</option>
              </select>
             </div>
          </form>
      </div>
      
    </div>
  
    <div class="btnBox">
      <input type="button" value="Reset" data-inline="true" onclick="resetfunc()" />
      <input type="submit" value="Login" data-inline="true" onclick="loginfunc()" />
    </div>
                            
  </div>

</div>
<script>
   $(document).ready(function() {
     <% if @params["orientation_change"] == "true" %>
       loginid = "<%= $values['loginId'] %>";
       var password = "<%= $values['password'] %>";
       remember = "<%= $values['remember'] %>";
       document.getElementById("login").value = loginid;
       document.getElementById("password").value = password;
     $("#remember").val(remember).slider("refresh");
       //setDropDownList(obj_remember, remember);   
   <% else %>
      u_name = "<%= @user %>";
      document.getElementById("login").value = u_name;
      setValuesOnChange();
   <% end %>
   });
   
</script>